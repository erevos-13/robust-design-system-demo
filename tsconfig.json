{
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"noImplicitAny": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noUncheckedSideEffectImports": true
	},
	"include": [
		"packages/**/src/**/*.ts",
		"packages/**/src/**/*.tsx",
		"apps/**/*.ts",
		"apps/**/*.tsx"
	],
	"exclude": ["node_modules", "dist", "**/node_modules", "**/dist"]
}
