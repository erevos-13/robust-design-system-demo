{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"removeComments": true,
		"sourceMap": true
	},
	"include": ["src"]
}
